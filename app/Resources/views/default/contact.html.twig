{% extends 'base.html.twig' %}
                {% block page_header %}
                    <section class="content-header">
                        <h1>
                            Contact Us
                        </h1>
                        <ol class="breadcrumb">
                            <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
                            <li><a href="/contact">Contact Us</a></li>
                        </ol>
                    </section>
                {% endblock %}
                        {% block body_content %}
                            <div class="col-md-6">
                            <div class="box box-primary">
                                <div class="box-header ">
                                    <h3 class="box-title">Contact Form</h3>
                                </div>
                                <div class="box-body">
                                    {{ form_start(form) }}
                                    <div class="form-group">
                                        {{ form_errors(form.firstName) }}
                                        {{ form_widget(form.firstName,{'attr':{'class':'form-control input-lg','placeholder':'First Name'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_errors(form.lastName) }}
                                        {{ form_widget(form.lastName,{'attr':{'class':'form-control input-lg','placeholder':'Last Name'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_errors(form.email) }}
                                        {{ form_widget(form.email,{'attr':{'class':'form-control input-lg','placeholder':'Last Name'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.Send,{'attr':{'class':'btn btn-primary'}}) }}
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </div>
                            </div>
            <div class="col-md-6">
                                <div class="box box-primary">
                                    <div class="box-header ">
                                        <h3 class="box-title">Map</h3>
                                    </div>
                                    <div class="box-body">
                                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2490.265925862561!2d-2.332141884145425!3d51.379790427846274!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x487181bb49a79509%3A0xe0e9fd0ad3777204!2sWessex+House!5e0!3m2!1sen!2suk!4v1468940598730" width="550" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
                                    </div>
                                </div>

</div>
                        {% endblock %}




